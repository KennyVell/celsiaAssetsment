@model celsiaAssetsment.DTOs.InvoiceDTO

@{
    ViewData["Title"] = "Delete Invoice";
}

<h2>@ViewData["Title"]</h2>

@if (User.Identity!.IsAuthenticated)
{
    <div>
        <h4>Are you sure you want to delete this invoice?</h4>
        <div>
            <dl class="row">
                <dt class="col-sm-2">Number</dt>
                <dd class="col-sm-10">@Model.Number</dd>
                
                <dt class="col-sm-2">Period</dt>
                <dd class="col-sm-10">@Model.Period</dd>

                <dt class="col-sm-2">Billed Amount</dt>
                <dd class="col-sm-10">@Model.Billed_Amount</dd>

                <dt class="col-sm-2">Paid Amount</dt>
                <dd class="col-sm-10">@Model.Paid_Amount</dd>

                <dt class="col-sm-2">Client ID</dt>
                <dd class="col-sm-10">@Model.ClientId</dd>
            </dl>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
}
