@model celsiaAssetsment.Models.Invoice

@{
    ViewData["Title"] = "Invoice Details";
}

<h2>@ViewData["Title"]</h2>

@if (User.Identity!.IsAuthenticated)
{
    <div>
        <h4>Invoice</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Number</dt>
            <dd class="col-sm-10">@Model.Number</dd>

            <dt class="col-sm-2">Period</dt>
            <dd class="col-sm-10">@Model.Period</dd>

            <dt class="col-sm-2">Billed Amount</dt>
            <dd class="col-sm-10">@Model.Billed_Amount</dd>

            <dt class="col-sm-2">Paid Amount</dt>
            <dd class="col-sm-10">@Model.Paid_Amount</dd>

            <dt class="col-sm-2">Client</dt>
            <dd class="col-sm-10">@Model.Client?.Name</dd>
        </dl>
    </div>
    <p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </p>
}
