@model celsiaAssetsment.DTOs.LoginDTO
@{
  ViewData["Title"] = "Login";
  Layout = "_Account";
}

<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

        <div class="d-flex justify-content-center py-4">
          <a asp-controller="Account" asp-action="Login" class="logo d-flex align-items-center w-auto">
            <img src="https://www.celsia.com/wp-content/uploads/2021/05/Grupo-697.svg" alt="logo">
          </a>
        </div>

        <div class="card mb-3 px-3">

          <div class="card-body">

            <div class="pt-4 pb-2">
              <h5 class="card-title text-center text-black pb-0 fs-4">Sign in to your account </h5>
            </div>

            <form class="row g-3 needs-validation" novalidate asp-controller="Account" asp-action="Login"
              method="post">

              <div class="col-12">
                <!--label for="Email" class="form-label">Correo electr√≥nico</label-->
                <div class="input-group has-validation">
                  <span class="input-group-text" id="inputGroupPrepend"><i class="ri-mail-line"></i></span>
                  <input type="email" class="form-control" id="Email" name="Email" required asp-for="Email" placeholder="Email">
                  <div class="invalid-feedback">Please enter your email in valid format.</div>
                </div>
              </div>

              <div class="col-12">
                <!--label for="Password" class="form-label">Password</label-->
                <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" placeholder="Password" required>
                <div class="invalid-feedback">Please enter your password.</div>
              </div>
              @if (ViewData["Message"] != null)
              {
                <div class="col-12">
                  <p class="text-danger">@ViewData["Message"]<p/>
                </div>
              }
              <div class="col-12 py-2">
                <button class="btn btn-primary w-100" type="submit">Login</button>
              </div>
            </form>

          </div>
        </div>

      </div>
    </div>
  </div>

</section>