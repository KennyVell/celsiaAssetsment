@model celsiaAssetsment.Models.Transaction

@{
    ViewData["Title"] = "Transaction Details";
}

<h2>@ViewData["Title"]</h2>

@if (User.Identity!.IsAuthenticated)
{
    <div>
        <h4>Transaction</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Date & Time</dt>
            <dd class="col-sm-10">@Model.Date_Time</dd>

            <dt class="col-sm-2">Amount</dt>
            <dd class="col-sm-10">@Model.Amount</dd>

            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@Model.Status</dd>

            <dt class="col-sm-2">Type</dt>
            <dd class="col-sm-10">@Model.Type</dd>

            <dt class="col-sm-2">Client</dt>
            <dd class="col-sm-10">@Model.Client?.Name</dd>

            <dt class="col-sm-2">Platform</dt>
            <dd class="col-sm-10">@Model.Platform?.Name</dd>

            <dt class="col-sm-2">Invoice</dt>
            <dd class="col-sm-10">@Model.Invoice?.Number</dd>
        </dl>
    </div>
    <p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </p>
}
